DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# At-rest encryption key for sensitive fields (Fernet key, urlsafe base64 32 bytes).
# In dev you can leave it empty (a deterministic dev key will be derived from SECRET_KEY).
# In prod (DEBUG=0) you MUST set it.
# Generate one with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=

DB_NAME=inventory_app
DB_USER=inventory_app
DB_PASSWORD=inventory_app
DB_HOST=db
DB_PORT=5432

TIME_ZONE=Europe/Rome

# alert interno manutenzioni (usato dal job in futuro)
MAINTENANCE_ALERT_EMAIL=maintenance@example.local

# CSRF / CORS (dev & LAN)
# ATTENZIONE: CSRF_ALLOW_ALL_ORIGINS=1 è solo per dev/LAN e farà fallire l'avvio se DJANGO_DEBUG=0.
CSRF_ALLOW_ALL_ORIGINS=0
# Origini attendibili (consigliato al posto di CSRF_ALLOW_ALL_ORIGINS).
# Esempio: http://localhost:6383,http://172.26.103.124:6383
CSRF_TRUSTED_ORIGINS=
